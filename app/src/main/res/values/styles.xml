    <style name="SavedRecipeItemTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="SavedRecipeImageViewStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SavedRecipeLinearLayoutForViewsStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="customSnackBarStyle">
        <item name="android:backgroundTint">@color/colorPrimaryContainer</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.Material3.Light.ActionBar.Solid">
        <!--        <item name="navigationIconTint">@color/white</item>-->
        <!--        <item name="fontFamily">@font/montserrat_medium</item>-->
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemPaddingBottom">4dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Body_High_Importance">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="Body_Normal_Importance">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>


</resources>
