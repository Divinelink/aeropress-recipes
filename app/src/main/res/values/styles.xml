    <style name="TextAppearance.MyApp.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="RecipeItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="SavedRecipeImageViewStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="customSnackBarStyle">
        <item name="android:backgroundTint">@color/colorPrimaryContainer</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Text.TitleMedium</item>
        <item name="subtitleTextAppearance">@style/Text.BodyMedium</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.Material3.Light.ActionBar.Solid">
        <item name="titleTextAppearance">@style/Text.TitleMedium</item>
        <item name="subtitleTextAppearance">@style/Text.TitleMedium</item>
        <item name="android:titleTextAppearance">@style/Text.TitleLarge</item>
        <item name="android:subtitleTextAppearance">@style/Text.TitleMedium</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="itemPaddingBottom">8dp</item>
        <item name="itemPaddingTop">4dp</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemTextAppearanceActive">@style/Text.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/Text.LabelSmall</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
