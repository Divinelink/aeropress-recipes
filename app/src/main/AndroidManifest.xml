<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.divinelink.aeropress.recipes">

  <application
      android:name="aeropresscipe.divinelink.aeropress.base.BaseApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher"
      android:supportsRtl="true"
      android:theme="@style/Base.Theme.Aeropress">
    <activity
        android:name="aeropresscipe.divinelink.aeropress.addbeans.ui.AddBeanActivity"
        android:exported="false" />
    <activity
        android:name="aeropresscipe.divinelink.aeropress.settings.app.AppSettingsActivity"
        android:exported="false"
        android:theme="@style/Base.Theme.Aeropress" />
    <activity
        android:name="aeropresscipe.divinelink.aeropress.finish.FinishActivity"
        android:exported="false"
        android:launchMode="singleTask" />
    <activity
        android:name="aeropresscipe.divinelink.aeropress.timer.TimerActivity"
        android:launchMode="singleTask" />
    <activity
        android:name="aeropresscipe.divinelink.aeropress.base.HomeActivity"
        android:exported="true"
        android:launchMode="singleTask"
        android:theme="@style/Base.Theme.Aeropress">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>

</manifest>